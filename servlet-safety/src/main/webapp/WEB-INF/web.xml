<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
            http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <servlet>
        <servlet-name>StatelessFactorizer</servlet-name>
        <servlet-class>net.jcip.examples.StatelessFactorizer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UnsafeCounter</servlet-name>
        <servlet-class>net.jcip.examples.UnsafeCounterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatelessFactorizer</servlet-name>
        <url-pattern>/factors</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UnsafeCounter</servlet-name>
        <url-pattern>/counter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UnsafeCounter</servlet-name>
        <url-pattern>/reset</url-pattern>
    </servlet-mapping>
</web-app>
